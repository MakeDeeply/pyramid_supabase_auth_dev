{% extends "layout.jinja2" %}
{% block content %}
<div class="content">
    <h1>Profile Page</h1>
    <div>
        <p class="lead">{{request.identity.email}}</p>
    </div>

    <div class="m-2">
        <a class="link btn btn-danger" href="{{request.route_url('reset_password')}}">Reset password</a>
        <a class="link btn btn-warning" href="{{request.route_url('logout')}}">Logout</a>
    </div>

    <div class="card p-2">
    {% if your_color %}
        <h2>Your color is: <span class="favoriteColorText" style="background: {{your_color }};">{{ your_color}}</span></h2>
        <p>You can change it here:</p>
    {% endif %}

		<form method="post" action="{{request.route_url('profile')}}">
			{% include 'hidden_fields.jinja2' %}

			<label>Color</label>
			<select name="color">
				{% for color in colors %}
				<option {% if your_color == color %} selected {% endif %}>{{color}}</option>
				{% endfor %}
			</select>
			<input class="btn btn-primary btn-sm m-1" type="submit" value="Set color">
		</form>
    </div>
</div>
{% endblock content %}